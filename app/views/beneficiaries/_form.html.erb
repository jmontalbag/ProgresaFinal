      <div class="field">
       <%= f.label :rut %>
       </div>
       <div class="field">
       <%= f.text_field :rut, placeholder: "Ingrese rut", :required => true , :oninput => "checkRut(this)" %>
      </div>
      <script type="text/javascript">
        function checkRut(rut) {
        var valor = rut.value.replace('.','');
