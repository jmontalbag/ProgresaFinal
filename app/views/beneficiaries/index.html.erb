<% content_for :content_header do %>
    <section class="content-header">
      <p id="notice"><%= notice %></p>
      <div class="row">
        <h1>Beneficiarios</h1>
      </div>
      <div class="row">
        <span class="pull-left glyphicon glyphicon-plus"><%= link_to 'Crear Beneficiario', new_beneficiary_path %></span>
      </div>
    </section>
<% end %>

<section class="content invoice">
  <div class="table-responsive">
  <table class="table table-striped" border="1">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @beneficiaries.each do |beneficiary| %>
      <tr>
        <td><%= beneficiary.nombre %></td>
        <td><%= beneficiary.apellido %></td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ><%= link_to 'Mostrar', beneficiary %></td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar', edit_beneficiary_path(beneficiary) %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to 'Eliminar', beneficiary, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</section>


<br>


