<p id="notice"><%= notice %></p>

<h1>Historiale</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Beneficiario</th>
      <th>Estado</th>
      <th>Objetivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user %></td>
        <td><%= record.beneficiary %></td>
        <td><%= record.state %></td>
        <td><%= record.objective %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

