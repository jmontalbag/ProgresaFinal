<!DOCTYPE html>
<html lang="es">
<head>
  <title>Crea un Historial</title>
</head>
<body>
  <section class="content invoice">
      <%= form_for(record) do |f| %>
        <% if record.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(record.errors.count, "error") %> Prohibido guardar este Historial :</h2>

            <ul>
            <% record.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

    <div class="row">
    <div class="form-group">
  <div class="field">
    <%= f.label :user_id, "Usuario" %>
     <%= collection_select( :record, :user_id, User.all, :id, :nombre, { :multiple => false }, { :class => "my-custom-class" } ) %>
  </div>
  </div>
     <div class="form-group">

  <div class="field">
    <%= f.label :beneficiary_id, "Beneficiario" %>
     <%= collection_select( :record, :beneficiary_id, Beneficiary.all, :id, :nombre, { :multiple => false }, { :class => "my-custom-class" } ) %>
  </div>
</div>
   <div class="form-group">
  <div class="field">
    <%= f.label :state_id, "Estado" %>
    <%= collection_select( :record, :state_id, State.all, :id, :nombre, { :multiple => false }, { :class => "my-custom-class" } ) %>
  </div>
  </div>
   <div class="form-group">
  <div class="field">
    <%= f.label :objective_id, "Objetivo" %>
     <%= collection_select( :record, :objective_id, Objective.all, :id, :texto, { :multiple => false }, { :class => "my-custom-class" } ) %>
  </div>
  </div>
   <div class="form-group">
  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
  </div>

<% end %>
</div>
</section>
</body>
</html>